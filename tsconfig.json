{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "lib": [ "es6", "dom", "esnext.asynciterable", "es2016"  ],
    "allowJs": true,
    "declaration": true,
    "sourceMap": false,
    // "noUnusedLocals": true,
    "strictNullChecks": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [ "src/*", "src/**/*", "src/**/**/*", "src/**/**/**/*" ],
  "exclude": [
    "node_modules",
    "src/examples"
  ]
}
